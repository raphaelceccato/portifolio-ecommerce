<link href="/css/carrinho.css" rel="stylesheet">

<div class="p-2 mx-4">
    <h2>Meu Carrinho</h2>
    <hr class="mt-3">
    <div id="produtos" class="d-flex gap-2 flex-column">
        <% if (produtos.length == 0) { %>
            <p>Seu carrinho est√° vazio.</p>
        <% } else {
            for (const p of produtos) { %>
                <div id="produto-<%= p.id %>" class="produto d-flex mx-2 p-1 border bg-white shadow-sm">
                    <div class="border produto-img">
                        <img class="mw-100 mh-100" src="/img/produtos/<%= p.id %>.jpg">
                    </div>
                    <div class="d-flex col flex-column flex-md-row">
                        <div class="px-5">
                            <h4><%= p.nome %></h4>
                            <p><%= p.descricao %></p>
                        </div>
                        <div class="ms-md-auto me-3 d-flex flex-row gap-2 flex-md-column flex-wrap gap-md-0 justify-content-center align-items-center h-100">
                            <label for="amount<%= p.id %>">Quantidade:</label>
                            <input type="number" name="amount<%= p.id %>" class="form-input" style="width: 108px"
                                min="1" max="999" oninput="onAmountChange(this, <%= p.id %>)" value="<%= p.amount %>">
                            <p class="m-0 small">Em estoque: <%= p.estoque %></p>
                            <button type="button" class="btn btn-outline-danger mt-2">
                                <svg xmlns="http://www.w3.org/2000/svg" class="align-middle" width="16" height="16" fill="currentColor" class="bi bi-trash"
                                    viewBox="0 0 16 16">
                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z" />
                                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z" />
                                </svg>
                                <span class="align-middle">Remover</span>
                            </button>
                        </div>
                    </div>
                </div>
            <% }
        } %>
    </div>
    <hr>
    <div id="msg" style="display: none" class="text-danger text-center mb-2"></div>
    <div class="d-flex flex-column flex-md-row justify-content-center align-items-center gap-1">
        <button type="button" class="btn btn-success" onclick="finishPurchase()" style="width: 142px">Finalizar compra</a>
        <button type="button" class="btn btn-danger" onclick="clearCart()" style="width: 142px">Limpar carrinho</a>
    </div>
</div>

<script src="/js/carrinho.js"></script>